pipeline {
    agent any

    environment {
        PATH = "/usr/bin:${env.PATH}" // Maven accessible via /usr/bin
    }

    stages {
        stage('Pull from Git') {
            steps {
                git branch: 'main', url: 'https://github.com/samderouich2000/Backend-CI-CD.git'
            }
        }

        stage('Clean Project') {
            steps {
                sh 'mvn clean'
            }
        }

        stage('Compile Project') {
            steps {
                sh 'mvn compile'
            }
        }

        stage('SonarQube Analysis') {
            steps {
                withSonarQubeEnv('sq1') {  // <- Nom du serveur SonarQube dans Jenkins
                    sh 'mvn sonar:sonar -Dsonar.projectKey=Backend-CI-CD -Dsonar.host.url=$SONAR_HOST_URL -Dsonar.login=$SONAR_AUTH_TOKEN -DskipTests'
                }
            }
        }

        stage('Package JAR') {
            steps {
                sh 'mvn package -DskipTests'
            }
        }
    }

    post {
        success {
            echo '✅ Build terminé avec succès !'
        }
        failure {
            echo '❌ Le build ou le scan SonarQube a échoué'
        }
    }
}
