pipeline {
    agent any

    environment {
        M2_HOME = "/opt/apache-maven-3.6.3"
        PATH = "$M2_HOME/bin:$PATH"
        SONARQUBE = "sq1" // nom de ton serveur SonarQube configuré dans Jenkins
    }

    stages {
        stage('Pull from Git') {
            steps {
                git url: 'https://github.com/samderouich2000/Backend-CI-CD.git', branch: 'main'
            }
        }

        stage('Clean Project') {
            steps {
                sh "${M2_HOME}/bin/mvn clean"
            }
        }

        stage('Compile Project') {
            steps {
                sh "${M2_HOME}/bin/mvn compile"
            }
        }

        stage('SonarQube Analysis') {
            steps {
                withSonarQubeEnv(SONARQUBE) {
                    sh "${M2_HOME}/bin/mvn sonar:sonar -DskipTests"
                }
            }
        }

        stage('Package JAR') {
            steps {
                sh "${M2_HOME}/bin/mvn package -DskipTests"
            }
        }
    }

    post {
        failure {
            echo "Le build ou le scan SonarQube a échoué ❌"
        }
        success {
            echo "Build et analyse SonarQube réussis ✅"
        }
    }
}
